{
  "files": ["index.ts"],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "declaration": true,
    "jsx": "react"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
